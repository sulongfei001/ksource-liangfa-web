  <select id="queryGrantMenusByParentId" parameterType="com.ksource.liangfa.domain.Module" resultMap="BaseResultMap">
    <![CDATA[   
	      	select distinct m.* from users_roles ur,roles_modules rm,module m
			 where ur.user_id=#{userId}
			and ur.role_id=rm.role_id
