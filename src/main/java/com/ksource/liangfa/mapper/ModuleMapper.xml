  <select id="getChildModule" parameterType="map" resultMap="BaseResultMap">
         SELECT distinct A.*  
            FROM MODULE A,ROLES_MODULES rm WHERE 1=1
            <if test="parentId!=null and parentId!=''">
            	and A.PARENT_ID=#{parentId}
            </if>
            <if test="moduleCategory!=null and moduleCategory!=''">
            	and a.module_category=#{moduleCategory}
            </if>
             and rm.module_id = A.Module_Id
            AND rm.ROLE_ID IN (
            	select r.role_id from  user_ u,users_roles ur ,role_ r
				  where u.user_id=ur.user_id
				  and ur.role_id=r.role_id
				  and u.user_id=#{userId}
				  UNION 
				  select r.role_id from USER_ u, POST_ROLE pr,ROLE_ r
				  where u.post_id=pr.post_id
				  and pr.role_id=r.role_id
				  and u.user_id=#{userId}
            )
            ORDER BY A.ORDER_NO
  </select>
  
  <select id="getModules" parameterType="java.util.Map" resultMap="BaseResultMap">
  	  SELECT M.*
    FROM ROLES_MODULES RM, MODULE M
   WHERE RM.MODULE_ID = M.MODULE_ID
     AND RM.ROLE_ID IN (SELECT ROLE_ID
                          FROM POST_ROLE R, POST_ P
                         WHERE R.POST_ID = P.POST_ID
                           AND P.ORG_ID = #{orgId})
    ORDER BY M.ORDER_NO
  </select>
